<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Admin</title>
  </head>
  <body>
    <%- include("./partials/navbar-admin") %> <% if (user.role === 4) { %>
    <div class="m-3 d-flex justify-content-between" id="adminCrearLink">
      <p class="m-4">
        Crear un articulo: <a href="/admin/articles/create" class="btn btn-success">Aqui</a>
      </p>
      <a href="/admin/users" class="btn btn-primary d-flex m-4 align-items-center">Users</a>
    </div>

    <table class="container d-flex justify-content-center mt-4" id="adminTable">
      <tr>
        <th>Id</th>
        <th>Titulo</th>
        <th>Contenido</th>
        <th>Imagen</th>
        <th>Acciones</th>
      </tr>
      <% for (let article of articles.reverse()) { %>
      <tr id="articulo<%= article.id %>">
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><p class="contenidoArticulo"><%= article.content %></p></td>
        <td>
          <img
            class="img-fluid img-articulo"
            src="/img/uploads/<%= article.img %>"
            alt="foto del articulo"
          />
        </td>
        <td>
          <span
            ><a href="/admin/articles/<%= article.id%>/edit" class="btn btn-primary">Modificar</a>
            <a href="/admin/articles/<%- article.id%>/delete" class="btn btn-danger"
              >Eliminar</a
            ></span
          >
        </td>
      </tr>
      <% }; %>
    </table>

